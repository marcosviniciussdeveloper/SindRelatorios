@page "/"
@using SindRelatorios.Models.Entities
@using SindRelatorios.Application.Interfaces
@using SindRelatorios.Models.Entities.Enums

<!-- ALIAS PARA EVITAR O ERRO DE NAMESPACE -->
@using InstructorEntity = SindRelatorios.Models.Entities.Instructor

<!-- USANDO O ALIAS NA INJEÇÃO -->
@inject IRepository<InstructorEntity> InstructorRepo
@inject IOpeningRepository OpeningRepo

<PageTitle>Dashboard - SindRelatórios</PageTitle>

<div class="fade-in">
    
    <!-- 1. HERO SECTION -->
    <div class="card border-0 bg-primary text-white shadow rounded-4 overflow-hidden position-relative mb-4">
        <div class="card-body p-5 position-relative" style="z-index: 2;">
            <h1 class="display-6 fw-bold">Olá, Administrador!</h1>
            <p class="lead opacity-75 mb-4" style="max-width: 600px;">
                Bem-vindo ao painel de controle. Você tem <strong class="text-warning">@NextOpenings.Count</strong> aberturas de turmas planejadas para os próximos dias.
            </p>
            <div class="d-flex gap-3">
                <a href="escalas/nova" class="btn btn-light text-primary fw-bold shadow-sm">
                    <i class="bi bi-calendar-plus me-2"></i>Nova Escala
                </a>
                <a href="gerador" class="btn btn-outline-light fw-bold">
                    <i class="bi bi-file-earmark-spreadsheet me-2"></i>Gerar Relatório
                </a>
            </div>
        </div>
        <i class="bi bi-activity position-absolute text-white opacity-25" 
           style="font-size: 15rem; right: -40px; bottom: -60px; transform: rotate(-15deg);"></i>
    </div>

    <!-- 2. KPIS -->
    <div class="row g-4 mb-4">
        <!-- Total Instrutores -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3 text-info">
                        <i class="bi bi-people-fill fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">Total Instrutores</h6>
                        <h3 class="fw-bold mb-0 text-dark">@TotalInstructors</h3>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Escalas Planejadas -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3 text-warning">
                        <i class="bi bi-calendar-check-fill fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">Escalas Criadas</h6>
                        <h3 class="fw-bold mb-0 text-dark">@TotalScales</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Próxima Abertura -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3 text-success">
                        <i class="bi bi-clock-history fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">Próxima Abertura</h6>
                        <h4 class="fw-bold mb-0 text-dark">
                            @(NextOpenings.FirstOrDefault()?.Date.ToString("dd/MM") ?? "--/--")
                        </h4>
                        <small class="text-muted">@(NextOpenings.FirstOrDefault()?.Region.ToString() ?? "Nenhuma")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 3. MÓDULOS E LISTA RECENTE -->
    <div class="row g-4">
        
        <!-- Atalhos -->
        <div class="col-lg-8">
            <h5 class="fw-bold text-secondary mb-3">Acesso Rápido</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <a href="escalas" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 hover-scale border-start border-5 border-primary">
                            <div class="card-body p-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-calendar-week fs-3 text-primary me-3"></i>
                                    <h5 class="fw-bold text-dark m-0">Gestão de Escalas</h5>
                                </div>
                                <p class="text-muted small m-0">Planeje datas, aloque instrutores e gerencie turmas extras.</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-6">
                    <a href="gerador" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 hover-scale">
                            <div class="card-body p-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-file-earmark-spreadsheet fs-3 text-success me-3"></i>
                                    <h5 class="fw-bold text-dark m-0">Gerador de Relatórios</h5>
                                </div>
                                <p class="text-muted small m-0">Gere grades curriculares e exporte para Excel.</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-12">
                    <a href="instructors" class="text-decoration-none">
                        <div class="card border-0 shadow-sm h-100 hover-scale">
                            <div class="card-body p-4 d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-vcard fs-3 text-secondary me-3"></i>
                                    <div>
                                        <h5 class="fw-bold text-dark m-0">Base de Instrutores</h5>
                                        <p class="text-muted small m-0">Cadastre e gerencie a equipe.</p>
                                    </div>
                                </div>
                                <i class="bi bi-arrow-right text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Lista de Próximas Aberturas -->
        <div class="col-lg-4">
            <h5 class="fw-bold text-secondary mb-3">Próximas Aberturas</h5>
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-0">
                    @if (!NextOpenings.Any())
                    {
                        <div class="text-center p-5 text-muted">
                            <i class="bi bi-calendar-x fs-1 opacity-50"></i>
                            <p class="mt-2 small">Nenhuma escala futura.</p>
                        </div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in NextOpenings.Take(5))
                            {
                                <li class="list-group-item p-3 d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="bg-light rounded p-2 text-center" style="min-width: 50px;">
                                            <span class="d-block fw-bold text-dark h5 m-0">@item.Date.Day</span>
                                            <span class="d-block text-muted x-small">@item.Date.ToString("MMM").ToUpper()</span>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold m-0 text-dark">@item.Region</h6>
                                            <small class="text-muted">@item.Slots.Count instrutores</small>
                                        </div>
                                    </div>
                                    <a href="escalas/@item.Id" class="btn btn-sm btn-light text-primary">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </div>
                <div class="card-footer bg-white border-0 text-center py-3">
                    <a href="escalas" class="text-decoration-none fw-bold small">Ver todas as escalas</a>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .hover-scale { transition: transform 0.2s ease-in-out; }
    .hover-scale:hover { transform: translateY(-3px); }
    .x-small { font-size: 0.7rem; }
    .fade-in { animation: fadeIn 0.5s ease-in; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

@code {
    private int TotalInstructors { get; set; }
    private int TotalScales { get; set; }
    private List<OpeningCalendar> NextOpenings { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        // Carrega dados reais do banco
        // Como agora usamos o alias InstructorEntity, o compilador sabe que é a tabela do banco
        var instructors = await InstructorRepo.GetAllAsync();
        TotalInstructors = instructors.Count;

        var openings = await OpeningRepo.GetAllAsync();
        TotalScales = openings.Count;

        NextOpenings = openings
            .Where(x => x.Date >= DateTime.UtcNow.Date)
            .OrderBy(x => x.Date)
            .ToList();
    }
}