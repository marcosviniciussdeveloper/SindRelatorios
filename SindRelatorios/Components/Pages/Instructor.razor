@page "/instructors"
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Gerenciar Instrutores</PageTitle>

<div class="container-fluid p-0">
    <h2 class="mb-4 text-secondary">Gerenciar Instrutores</h2>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @_errorMessage
            <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(_successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @_successMessage
            <button type="button" class="btn-close" @onclick="() => _successMessage = null"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom fw-bold py-3">
                    <i class="bi bi-person-plus-fill me-2 text-success"></i> Novo Instrutor
                </div>
                <div class="card-body">
                    
                    <EditForm Model="NewInstructor" OnValidSubmit="HandleAddInstructor" FormName="CreateInstructorForm">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-secondary">Nome Completo</label>
                            <InputText @bind-Value="NewInstructor.Name" 
                                       class="form-control py-2" 
                                       placeholder="Ex: JOSÉ DA SILVA" />
                            <ValidationMessage For="() => NewInstructor.Name" class="text-danger small" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success py-2">
                                <i class="bi bi-save"></i> Salvar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom fw-bold py-3">
                    <i class="bi bi-list-ul me-2 text-primary"></i> Cadastrados (@(_instructorsList?.Count ?? 0))
                </div>
                <div class="card-body p-0">
                    @if (_instructorsList == null)
                    {
                        <div class="p-5 text-center text-muted">
                            <div class="spinner-border spinner-border-sm text-primary mb-2"></div>
                            <p>Carregando...</p>
                        </div>
                    }
                    else if (!_instructorsList.Any())
                    {
                        <div class="p-5 text-center text-muted">
                            Nenhum instrutor encontrado.
                        </div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in _instructorsList)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                    <span class="fw-medium text-dark">@item.Name</span>
                                    
                                    <button type="button" 
                                            class="btn btn-outline-danger btn-sm border-0" 
                                            title="Excluir"
                                            @onclick="() => HandleDelete(item.Id)"
                                            @onclick:stopPropagation="true">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>