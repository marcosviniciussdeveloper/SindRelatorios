@page "/gerador"
@using Microsoft.AspNetCore.Components.Forms
@using SindRelatorios.Application.Interfaces
@using SindRelatorios.Application.DTOs
@using SindRelatorios.Models.Entities
@using System.Globalization
@using SindRelatorios.Components.Shared 

@using InstructorEntity = SindRelatorios.Models.Entities.Instructor

@inject IRepository<InstructorEntity> InstructorRepository
@inject IScheduleService ScheduleService
@inject IExcelExportService ExcelExportService
@inject IJSRuntime JS

<PageTitle>Gerador de Relatórios</PageTitle>

<div class="container-fluid p-0">

    <!-- Header -->
    <div class="d-flex align-items-center mb-4 no-print">
        <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3 text-primary">
            <i class="bi bi-pencil-square fs-4"></i>
        </div>
        <div>
            <h3 class="fw-bold text-secondary m-0">Gerador & Editor</h3>
            <small class="text-muted">Gere, edite substituições e exporte o cronograma.</small>
        </div>
    </div>

    <!-- Formulário -->
    <div class="card border-0 shadow-sm mb-4 no-print">
        <div class="card-body p-4">
            <EditForm Model="InputData" OnValidSubmit="HandleGenerate" FormName="GeneratorForm">
                <DataAnnotationsValidator />

                <div class="row g-4">
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-secondary small">DATA INÍCIO</label>
                        <InputDate @bind-Value="InputData.StartDate" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold text-secondary small">INSTRUTOR PADRÃO</label>
                        
                        <!-- AQUI ESTÁ A MUDANÇA: Usamos nosso Componente de Autocomplete -->
                        <InstructorAutocomplete 
                            AllInstructors="InstructorsList" 
                            @bind-Value="InputData.InstructorName" />
                            
                        <!-- Mantemos a validação -->
                        <ValidationMessage For="() => InputData.InstructorName" class="text-danger small" />
                    </div>

                    <div class="col-md-5">
                        <label class="form-label fw-bold text-secondary small">CURSO</label>
                        <InputSelect @bind-Value="InputData.CourseType" class="form-select">
                            <option value="FirstLicense">Primeira Habilitação (45h)</option>
                            <option value="Recycling">Reciclagem (30h)</option>
                        </InputSelect>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold text-secondary small">TURNO PADRÃO</label>
                        <InputSelect @bind-Value="InputData.SelectedShift" class="form-select">
                            <option value="MANHA">Manhã</option>
                            <option value="TARDE">Tarde</option>
                            <option value="NOITE">Noite</option>
                            <option value="MANHA_TARDE">Manhã/Tarde</option>
                            <option value="MANHA_NOITE">Manhã/Noite</option>
                            <option value="TARDE_NOITE">Tarde/Noite</option>
                            <option value="MANHA_TARDE_NOITE">Manhã/Tarde/Noite</option>
                        </InputSelect>
                    </div>

                    <div class="col-12 mt-4">
                        <button type="submit" class="btn btn-primary w-100 fw-bold shadow-sm py-2">
                            <i class="bi bi-magic me-2"></i> Gerar Prévia Inicial
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>

    <!-- Tabela de Resultados -->
    @if (ScheduleResult != null && ScheduleResult.Any())
    {
        <div class="card border-0 shadow-sm fade-in" id="printable-area">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <h5 class="m-0 fw-bold text-secondary">Cronograma</h5>
                    <span class="badge bg-success fs-6">
                        <i class="bi bi-clock-history me-1"></i> Total: @ScheduleResult.Sum(x => x.Hours) horas
                    </span>
                </div>

                <div class="d-flex gap-2 no-print">
                    <button class="btn btn-outline-secondary btn-sm" onclick="window.print()">
                        <i class="bi bi-printer-fill me-1"></i> Imprimir
                    </button>
                    <button class="btn btn-success btn-sm" @onclick="HandleExportExcel">
                        <i class="bi bi-file-earmark-excel-fill me-1"></i> Excel
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle mb-0">
                    <thead class="bg-light text-secondary small">
                        <tr>
                            <th style="width: 50px;" class="text-center">#</th>
                            <th style="width: 140px;">DATA</th>
                            <th>DIA DA SEMANA</th>
                            <th style="width: 120px;">TURNO</th>
                            <th>MATÉRIA</th>
                            <th>INSTRUTOR</th>
                            <th style="width: 100px;" class="text-center no-print">AÇÕES</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int index = 1; }
                        @foreach (var row in ScheduleResult)
                        {
                            bool isEditing = (_editingRow == row);

                            <tr class="@(isEditing ? "table-warning" : "")">
                                <td class="text-center fw-bold text-muted">@(index++)</td>

                                @if (isEditing)
                                {
                                    <td colspan="5">
                                        <div class="row g-2">
                                            <div class="col-md-3">
                                                <input type="date" class="form-control form-control-sm" @bind="row.Date" />
                                            </div>
                                            <div class="col-md-3">
                                                <input type="text" class="form-control form-control-sm" @bind="row.Shift" placeholder="Turno" />
                                            </div>
                                            <div class="col-md-6">
                                                <!-- AQUI TAMBÉM: Autocomplete na edição da linha -->
                                                <InstructorAutocomplete 
                                                    AllInstructors="InstructorsList" 
                                                    @bind-Value="row.Instructor" />
                                            </div>
                                            <div class="col-md-12 mt-1">
                                                <input type="text" class="form-control form-control-sm" @bind="row.Subject" placeholder="Matéria" />
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center no-print">
                                        <button class="btn btn-success btn-sm" @onclick="() => SaveEdit()" title="Salvar">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </td>
                                }
                                else
                                {
                                    <td class="fw-bold text-primary">@row.Date.ToString("dd/MM/yyyy")</td>
                                    <td class="text-uppercase small">@row.Date.ToString("dddd", new CultureInfo("pt-BR"))</td>
                                    <td><span class="badge bg-light text-dark border">@row.Shift</span></td>
                                    <td>@row.Subject</td>
                                    <td>@row.Instructor</td>
                                    
                                    <td class="text-center no-print">
                                        <div class="btn-group">
                                            <button class="btn btn-outline-primary btn-sm border-0" @onclick="() => EnableEdit(row)" title="Editar">
                                                <i class="bi bi-pencil-fill"></i>
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm border-0" @onclick="() => DeleteRow(row)" title="Excluir">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .fade-in { animation: fadeIn 0.5s ease-in; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

    @@media print {
        body * { visibility: hidden; }
        #printable-area, #printable-area * { visibility: visible; }
        .no-print, .no-print * { display: none !important; width: 0 !important; }
        th.no-print, td.no-print { display: none !important; border: none !important; }
        #printable-area { position: absolute; left: 0; top: 0; width: 100%; }
        .card { border: none !important; }
        table { width: 100% !important; font-size: 12px; }
        body, html { background: white; height: auto; }
    }
</style>

@code {
    [SupplyParameterFromForm]
    public GeneratorInput InputData { get; set; } = new();

    private List<InstructorEntity> InstructorsList { get; set; } = new();
    private List<ScheduleRow>? ScheduleResult { get; set; }
    private ScheduleRow? _editingRow = null;

    protected override async Task OnInitializedAsync()
    {
        InstructorsList = (await InstructorRepository.GetAllAsync()).OrderBy(x => x.Name).ToList();
    }

    private async Task HandleGenerate()
    {
        ScheduleResult = await ScheduleService.GeneratePreviewAsync(InputData);
        _editingRow = null;
    }

    private void EnableEdit(ScheduleRow row) => _editingRow = row;
    private void SaveEdit() => _editingRow = null;
    
    private void DeleteRow(ScheduleRow row)
    {
        if (ScheduleResult != null) ScheduleResult.Remove(row);
    }

    private async Task HandleExportExcel()
    {
        if (ScheduleResult == null || !ScheduleResult.Any()) return;
        var excelBytes = ExcelExportService.ExportReport(ScheduleResult);
        var fileName = $"Cronograma_{InputData.InstructorName}_{DateTime.Now:ddMMyy}.xlsx";
        using var stream = new MemoryStream(excelBytes);
        using var streamRef = new DotNetStreamReference(stream);
        await JS.InvokeVoidAsync("downloadFileFromStream", fileName, "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet", streamRef);
    }
}