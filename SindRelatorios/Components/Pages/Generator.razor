@page "/gerador"
@using Microsoft.AspNetCore.Components.Forms
@using System.Globalization
@using SindRelatorios.Models.Entities 
@using SindRelatorios.Application.DTOs

<PageTitle>Gerador de Relatórios</PageTitle>

<div class="container-fluid p-0">
    
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4 no-print">
        <div class="d-flex align-items-center">
            <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3 text-primary">
                <i class="bi bi-printer-fill fs-4"></i>
            </div>
            <div>
                <h3 class="fw-bold text-secondary m-0">Central de Relatórios</h3>
                <small class="text-muted">Gere cronogramas individuais ou em massa.</small>
            </div>
        </div>

        <div class="btn-group shadow-sm">
            <button class="btn @(ActiveTab == "Individual" ? "btn-primary" : "btn-white text-secondary border") fw-bold px-4" 
                    @onclick='() => ActiveTab = "Individual"'>Individual</button>
            <button class="btn @(ActiveTab == "Lote" ? "btn-primary" : "btn-white text-secondary border") fw-bold px-4" 
                    @onclick='() => ActiveTab = "Lote"'>Em Lote</button>
        </div>
    </div>

    <!-- ABA 1: INDIVIDUAL -->
    @if (ActiveTab == "Individual")
    {
        <div class="card border-0 shadow-sm mb-4 no-print">
            <div class="card-body p-4">
                <EditForm Model="InputData" OnValidSubmit="HandleGenerate" FormName="GeneratorForm">
                    <DataAnnotationsValidator />
                    <div class="row g-4">
                        <div class="col-md-3">
                            <label class="form-label fw-bold small text-secondary">DATA INÍCIO</label>
                            <InputDate @bind-Value="InputData.StartDate" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-secondary">INSTRUTOR</label>
                            <InputSelect @bind-Value="InputData.InstructorName" class="form-select">
                                <option value="">Selecione...</option>
                                @foreach (var instr in InstructorsList) { <option value="@instr.Name">@instr.Name</option> }
                            </InputSelect>
                            <ValidationMessage For="() => InputData.InstructorName" class="text-danger small"/>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold small text-secondary">CURSO</label>
                            <InputSelect @bind-Value="InputData.CourseType" class="form-select">
                                <option value="FirstLicense">Primeira Habilitação</option>
                                <option value="Recycling">Reciclagem</option>
                            </InputSelect>
                        </div>
                         <div class="col-md-2">
                            <label class="form-label fw-bold small text-secondary">TURNO</label>
                            <InputSelect @bind-Value="InputData.SelectedShift" class="form-select">
                                <option value="NOITE">Noite</option>
                                <option value="MANHA">Manhã</option>
                                <option value="TARDE">Tarde</option>
                            </InputSelect>
                        </div>
                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary w-100 fw-bold shadow-sm">
                                <i class="bi bi-gear-wide-connected me-2"></i> Gerar Prévia
                            </button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>

        @if (ScheduleResult != null && ScheduleResult.Rows.Any())
        {
            @RenderTable(ScheduleResult, InputData.InstructorName, true)
        }
    }

    <!-- ABA 2: EM LOTE -->
    @if (ActiveTab == "Lote")
    {
        <div class="card border-0 shadow-sm mb-4 no-print fade-in">
            <div class="card-body p-4 border-start border-4 border-warning">
                <h6 class="fw-bold text-secondary mb-3"><i class="bi bi-collection-play me-2"></i>Configuração do Lote</h6>
                
                <div class="row g-3 align-items-end mb-4">
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">DATA INÍCIO DA TURMA</label>
                        <input type="date" class="form-control" @bind="BatchStartDate" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">CURSO</label>
                        <select class="form-select" @bind="BatchCourseType">
                            <option value="FirstLicense">Primeira Habilitação (45h)</option>
                            <option value="Recycling">Reciclagem (30h)</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">TURNO PADRÃO</label>
                        <select class="form-select" @bind="BatchShift">
                            <option value="NOITE">Noite</option>
                            <option value="MANHA">Manhã</option>
                            <option value="TARDE">Tarde</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-warning w-100 fw-bold text-dark" @onclick="HandleBatchGenerate">
                            <i class="bi bi-play-circle-fill me-2"></i> Gerar Relatórios
                        </button>
                    </div>
                </div>

                <hr />
                
                <div class="card bg-light border-0" style="max-height: 200px; overflow-y: auto;">
                    <div class="card-body pt-2">
                        <div class="form-check mb-2 border-bottom pb-2 sticky-top bg-light">
                            <input class="form-check-input" type="checkbox" id="selectAll" checked="@BatchAllSelected" @onchange="ToggleBatchAll">
                            <label class="form-check-label fw-bold" for="selectAll">Selecionar Todos os Instrutores</label>
                        </div>
                        <div class="row">
                            @foreach (var item in BatchSelectionList)
                            {
                                <div class="col-md-3 mb-1">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="item.IsSelected" id="instr_@item.Id">
                                        <label class="form-check-label small text-truncate w-100" for="instr_@item.Id">@item.Name</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (BatchResults.Any())
        {
            <div class="alert alert-success d-flex justify-content-between align-items-center no-print shadow-sm mb-4">
                <div><i class="bi bi-check-circle-fill fs-4 me-2"></i> <strong>@BatchResults.Count</strong> Relatórios Gerados.</div>
                <div class="d-flex gap-2">
                    <button class="btn btn-success fw-bold px-4" @onclick="HandleBatchExportExcel">Excel (Abas)</button>
                    <!-- Botão para Imprimir TUDO (Lista Completa) -->
                    <button class="btn btn-dark fw-bold px-4" onclick="window.print()">Imprimir Tudo</button>
                </div>
            </div>

            @foreach (var result in BatchResults)
            {
                var instrName = result.Rows.FirstOrDefault()?.Instructor ?? "Desconhecido";
                @RenderTable(result, instrName, false)
            }
        }
    }
</div>

<!-- TEMPLATE REUTILIZÁVEL DA TABELA -->
@code {
    RenderFragment RenderTable(ScheduleResult result, string instructorName, bool showIndividualActions) => __builder =>
    {
        // LÓGICA DE CLASSE CSS PARA IMPRESSÃO:
        // Se PrintTargetName for NULL -> Imprime todos (class "print-visible")
        // Se PrintTargetName for IGUAL ao nome deste instrutor -> Imprime este (class "print-visible")
        // Se não -> Esconde (class "print-hidden")
        
        string printClass = (PrintTargetName == null || PrintTargetName == instructorName) ? "print-visible" : "print-hidden";

        <div class="card border-0 shadow-sm mb-5 report-card @printClass">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom print-header">
                <div class="d-flex align-items-center gap-3">
                    <h5 class="m-0 fw-bold text-primary print-title">@instructorName</h5>
                    <span class="badge bg-success fs-6 print-badge">Total: @result.TotalLoadHours h</span>
                </div>
                <div class="d-flex gap-2 no-print">
                    @if(showIndividualActions) {
                         <!-- AQUI: Chama a função PrintIndividual passando o nome deste instrutor -->
                         <button class="btn btn-outline-secondary btn-sm" @onclick="() => PrintIndividual(instructorName)">
                             <i class="bi bi-printer"></i> Imprimir
                         </button>
                         <button class="btn btn-success btn-sm" @onclick="() => HandleExportExcel(result, instructorName)">
                             <i class="bi bi-file-earmark-excel"></i> Excel
                         </button>
                    }
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle mb-0 small">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-3">#</th>
                            <th>DATA</th>
                            <th>DIA</th>
                            <th>TURNO</th>
                            <th>MATÉRIA</th>
                            <th class="text-center">H/A</th>
                            @if(showIndividualActions) 
                            { 
                                <th class="text-center no-print" style="width: 80px;">AÇÃO</th> 
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{ int idx = 1; }
                        @foreach (var row in result.Rows)
                        {
                            bool isEditing = (_editingRow == row);
                            <tr>
                                <td class="ps-3 fw-bold text-muted">@(idx++)</td>
                                
                                @if (isEditing)
                                {
                                    <td colspan="4">
                                        <div class="row g-1">
                                            <div class="col-4"><input type="date" class="form-control form-control-sm" @bind="row.Date" /></div>
                                            <div class="col-4"><input type="text" class="form-control form-control-sm" @bind="row.Shift" /></div>
                                            <div class="col-12"><input type="text" class="form-control form-control-sm" @bind="row.Subject" /></div>
                                        </div>
                                    </td>
                                    <td class="text-center"><input type="number" class="form-control form-control-sm" @bind="row.Hours" /></td>
                                    <td class="text-center no-print">
                                        <button class="btn btn-success btn-sm" @onclick="() => SaveEdit(result)">
                                            <i class="bi bi-check-lg"></i>
                                        </button>                                    </td>
                                }
                                else
                                {
                                    <td class="fw-bold">@row.Date.ToString("dd/MM/yyyy")</td>
                                    <td class="text-uppercase">@row.Date.ToString("dddd", new CultureInfo("pt-BR"))</td>
                                    <td><span class="badge bg-info text-dark print-badge-table">@row.Shift</span></td>
                                    <td>@row.Subject</td>
                                    <td class="text-center fw-bold">@row.Hours</td>
                                    @if(showIndividualActions) {
                                        <td class="text-center no-print">
                                            <button class="btn btn-link p-0 me-2 text-primary" @onclick="() => EnableEdit(row)"><i class="bi bi-pencil-fill"></i></button>
                                            <button class="btn btn-link p-0 text-danger" @onclick="() => DeleteRow(result, row)"><i class="bi bi-trash-fill"></i></button>
                                        </td>
                                    }
                                    else { <td class="no-print"></td> }
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Quebra de página só funciona se for em lote, ou apenas ignora no individual -->
            <div class="page-break"></div>
        </div>
    };
}

<style>
    .fade-in { animation: fadeIn 0.5s ease-in; }

    @@media print {
        /* 1. ESCONDE TUDO (Globalmente) */
        .no-print, header, nav, .sidebar, .btn-group, .form-control, .btn { display: none !important; }
        
        /* Esconde o Wrapper Principal do Layout (Isso remove a sidebar escura) */
        .d-flex.flex-column.bg-dark { display: none !important; }
        
        /* Garante que o fundo seja branco */
        body { background: white !important; margin: 0; padding: 0; }
        .container-fluid, .main-content { padding: 0 !important; margin: 0 !important; width: 100% !important; max-width: 100% !important; }

        /* 2. CONTROLE DE VISIBILIDADE INTELIGENTE */
        /* Se o elemento tiver a classe print-hidden, suma com ele */
        .print-hidden { display: none !important; }
        
        /* Se tiver print-visible, mostre */
        .print-visible { 
            display: block !important; 
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
        }

        /* 3. ESTILIZAÇÃO DA TABELA */
        .report-card {
            border: none !important;
            box-shadow: none !important;
            margin: 0 !important;
            padding-top: 20px;
        }
        
        .print-title { color: #000 !important; font-size: 16pt !important; }
        
        .print-badge, .print-badge-table { 
            border: 1px solid #000 !important; 
            color: #000 !important; 
            background: transparent !important; 
        }

        table { width: 100% !important; border-collapse: collapse !important; }
        th, td { border: 1px solid #000 !important; padding: 4px !important; font-size: 10pt; }
        thead { background-color: #eee !important; -webkit-print-color-adjust: exact; }

        .page-break { page-break-after: always; }
    }
</style>