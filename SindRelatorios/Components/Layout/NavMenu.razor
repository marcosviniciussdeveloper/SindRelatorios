@using Microsoft.AspNetCore.Components.Routing

<div class="d-flex flex-column gap-1 px-2">
    
    <!-- Dashboard -->
    <NavLink class="@GetLinkClasses()" href="" Match="NavLinkMatch.All">
        <div class="@GetIconContainerClasses()">
            <i class="bi bi-speedometer2 fs-5"></i>
        </div>
        @if (!Collapsed)
        {
            <span class="text-nowrap fade-in">Dashboard</span>
        }
    </NavLink>

    <!-- Gerador -->
    <NavLink class="@GetLinkClasses()" href="gerador">
        <div class="@GetIconContainerClasses()">
            <i class="bi bi-file-earmark-spreadsheet fs-5"></i>
        </div>
        @if (!Collapsed)
        {
            <span class="text-nowrap fade-in">Gerador</span>
        }
    </NavLink>

    <!-- Instrutores -->
    <NavLink class="@GetLinkClasses()" href="instructors">
        <div class="@GetIconContainerClasses()">
            <i class="bi bi-people fs-5"></i>
        </div>
        @if (!Collapsed)
        {
            <span class="text-nowrap fade-in">Instrutores</span>
        }
    </NavLink>

</div>

<style>
    .fade-in {
        animation: fadeIn 0.3s ease-in;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .nav-link.active {
        background-color: #0d6efd !important;
        color: white !important;
    }
    
    .nav-link:hover:not(.active) {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
    }
</style>

@code {
    [Parameter]
    public bool Collapsed { get; set; }

    private string GetLinkClasses()
    {
        return $"nav-link text-white opacity-75 rounded-3 d-flex align-items-center py-3 {(Collapsed ? "justify-content-center" : "px-3 gap-3")}";
    }

    private string GetIconContainerClasses()
    {
        return "d-flex align-items-center justify-content-center";
    }
}