@page "/escalas/{Id:guid}"
@using SindRelatorios.Models.Entities
@using SindRelatorios.Models.Entities.Enums
@using SindRelatorios.Components.Shared
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Detalhes da Escala</PageTitle>

<div class="container-fluid p-0">
    
    <!-- Cabe√ßalho -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            <button class="btn btn-outline-secondary me-3 border-0" @onclick='() => Nav.NavigateTo("escalas")'>
                <i class="bi bi-arrow-left fs-4"></i>
            </button>
            <div>
                <h3 class="fw-bold text-secondary m-0">
                    <i class="bi bi-calendar-week me-2"></i>@Opening?.Region
                </h3>
                <div class="text-muted">
                    Data: <strong>@Opening?.Date.ToString("dd/MM/yyyy")</strong>
                </div>
            </div>
        </div>
        <button class="btn btn-success shadow-sm fw-bold px-4" @onclick="HandleSave" disabled="@_isSaving">
            @if (_isSaving) { <span class="spinner-border spinner-border-sm me-2"></span> }
            else { <i class="bi bi-check-lg me-2"></i> }
            Salvar Tudo
        </button>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <strong>Ops!</strong> @_errorMessage
            <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
        </div>
    }

    @if (Opening == null)
    {
        <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
    }
    else
    {
        <div class="row g-4">
            
            <!-- LOOP PARA CRIAR OS BLOCOS POR TURNO -->
            @foreach (var shift in new[] { "MANHA", "TARDE", "NOITE" })
            {
                // Filtra as vagas deste turno espec√≠fico
                var slotsDoTurno = Opening.Slots
                    .Where(x => !x.IsExtra && x.Shift == shift)
                    .ToList();

                // Define cores e √≠cones baseados no turno
                string headerColor = shift switch {
                    "MANHA" => "bg-warning text-dark",
                    "TARDE" => "bg-info text-white",
                    "NOITE" => "bg-dark text-white",
                    _ => "bg-secondary"
                };
                
                string icon = shift switch {
                    "MANHA" => "bi-brightness-high-fill",
                    "TARDE" => "bi-sun-fill",
                    "NOITE" => "bi-moon-stars-fill",
                    _ => "bi-clock"
                };

                string title = shift switch {
                    "MANHA" => "Manh√£",
                    "TARDE" => "Tarde",
                    "NOITE" => "Noite",
                    _ => shift
                };

                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header @headerColor py-2 d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-uppercase ls-1">
                                <i class="bi @icon me-2"></i>@title
                            </span>
                            <!-- Bot√£o j√° adiciona no turno certo -->
                            <button class="btn btn-sm btn-light fw-bold text-dark bg-white border-0 opacity-75 hover-opacity-100" 
                                    @onclick='() => AddSlot(false, shift)'>
                                <i class="bi bi-plus-circle me-1"></i> Adicionar
                            </button>
                        </div>
                        
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light small text-secondary">
                                        <tr>
                                            <th style="width: 50%">INSTRUTOR</th>
                                            <th style="width: 30%">STATUS</th>
                                            <th style="width: 10%">A√á√ÉO</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var slot in slotsDoTurno)
                                        {
                                            <tr class="@GetRowClass(slot)">
                                                <td>
                                                    <div class="bg-white rounded shadow-sm">
                                                        <InstructorAutocomplete 
                                                            AllInstructors="AllInstructors" 
                                                            Value="@slot.Instructor?.Name"
                                                            ValueChanged="@((name) => UpdateSlotInstructor(slot, name))" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <InputSelect @bind-Value="slot.Status" class="form-select form-select-sm w-auto border-0 shadow-none fw-bold">
                                                        <option value="Planejado">Planejado</option>
                                                        <option value="Aberto">‚úÖ ABERTA</option>
                                                        <option value="Cancelado">‚ùå Cancelada</option>
                                                    </InputSelect>
                                                </td>
                                                <td class="text-center">
                                                    <button class="btn btn-sm btn-link text-danger opacity-50 hover-opacity-100" @onclick="() => RemoveSlot(slot)">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                        @if (!slotsDoTurno.Any())
                                        {
                                            <tr>
                                                <td colspan="3" class="text-center text-muted py-4 small fst-italic">
                                                    Nenhum instrutor escalado para @title.
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- 2. GRADE EXTRA (MANTIDA NO FINAL) -->
            <div class="col-12 mt-5">
                <div class="card border-danger shadow-sm">
                    <div class="card-header bg-danger text-white py-2 d-flex justify-content-between align-items-center">
                        <div>
                            <span class="fw-bold fs-5"><i class="bi bi-lightning-fill me-2"></i>Turmas Extras</span>
                            <span class="ms-2 badge bg-white text-danger">Fila de Espera</span>
                        </div>
                        <button class="btn btn-sm btn-light text-danger fw-bold shadow-sm" @onclick='() => AddSlot(true, "NOITE")'>
                            <i class="bi bi-plus-circle me-1"></i> Incluir Reserva
                        </button>
                    </div>
                    
                    <div class="card-body p-0">
                        @if (!Opening.Slots.Any(x => x.IsExtra))
                        {
                            <div class="p-5 text-center text-muted opacity-75">
                                <i class="bi bi-cone-striped fs-1 d-block mb-2"></i>
                                Nenhuma turma extra planejada.
                            </div>
                        }
                        else
                        {
                            <table class="table mb-0 align-middle">
                                <thead>
                                    <tr class="text-danger small text-uppercase bg-danger bg-opacity-10">
                                        <th style="width: 40%" class="ps-4">Instrutor Reserva</th>
                                        <th style="width: 30%">Turno Preferencial</th>
                                        <th style="width: 20%">Situa√ß√£o</th>
                                        <th style="width: 10%" class="text-center">A√ß√£o</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var slot in Opening.Slots.Where(x => x.IsExtra))
                                    {
                                        <tr class="@GetRowClass(slot)">
                                            <td class="ps-4">
                                                 <div class="bg-white rounded shadow-sm">
                                                     <InstructorAutocomplete 
                                                        AllInstructors="AllInstructors" 
                                                        Value="@slot.Instructor?.Name"
                                                        ValueChanged="@((name) => UpdateSlotInstructor(slot, name))" />
                                                 </div>
                                            </td>
                                            <td>
                                                <InputSelect @bind-Value="slot.Shift" class="form-select form-select-sm border-danger text-danger fw-bold">
                                                    <option value="NOITE">Noite</option>
                                                    <option value="MANHA">Manh√£</option>
                                                    <option value="TARDE">Tarde</option>
                                                </InputSelect>
                                            </td>
                                            <td>
                                                 <InputSelect @bind-Value="slot.Status" class="form-select form-select-sm w-auto shadow-sm">
                                                    <option value="Planejado">üü° AGUARDANDO</option>
                                                    <option value="Aberto">üü¢ ABERTA</option>
                                                    <option value="Cancelado">‚ö™ CANCELADA</option>
                                                </InputSelect>
                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-outline-danger border-0" @onclick="() => RemoveSlot(slot)">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>

        </div>
    }
</div>

<style>
    .hover-opacity-100:hover { opacity: 1 !important; }
    .ls-1 { letter-spacing: 1px; }
    .table-success { background-color: #d1e7dd !important; --bs-table-bg: #d1e7dd !important; }
    .table-warning { background-color: #fff3cd !important; --bs-table-bg: #fff3cd !important; }
    .table-secondary { background-color: #e2e3e5 !important; }
</style>