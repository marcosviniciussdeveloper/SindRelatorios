@page "/instructors"
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Gerenciar Instrutores</PageTitle>

<h1>Gerenciar Instrutores</h1>

<div class="row">

    <!-- CADASTRO -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">Adicionar Novo Instrutor</div>

            <div class="card-body">
                <EditForm Model="newInstructor" OnValidSubmit="HandleAddInstructor">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label class="form-label">Nome Completo:</label>
                        <InputText class="form-control"
                                   @bind-Value="newInstructor.Name"
                                   placeholder="Ex: João da Silva" />
                    </div>

                    <button type="submit" class="btn btn-success">Salvar</button>
                </EditForm>
            </div>
        </div>
    </div>

    <!-- LISTA -->
    <div class="col-md-6">
        <h4>Instrutores Cadastrados</h4>

        @if (instructors == null)
        {
            <p><em>Carregando...</em></p>
        }
        else if (!instructors.Any())
        {
            <div class="alert alert-info">Nenhum instrutor cadastrado.</div>
        }
        else
        {
            <ul class="list-group">
                @foreach (var item in instructors)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @item.Name

                        <button class="btn btn-sm btn-danger"
                                @onclick="() => HandleDelete(item.Id)">
                            Remover
                        </button>
                    </li>
                }
            </ul>
        }
    </div>
</div>