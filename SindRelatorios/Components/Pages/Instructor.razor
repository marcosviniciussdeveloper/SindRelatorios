@page "/instructors"
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Gerenciar Instrutores</PageTitle>

<div class="container-fluid p-0">

    <!-- HEADER COM BOTÃO DE CADASTRO -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3 text-primary">
                <i class="bi bi-person-vcard-fill fs-4"></i>
            </div>
            <div>
                <h3 class="fw-bold text-secondary m-0">Instrutores</h3>
                <small class="text-muted">Gerencie o cadastro da equipe.</small>
            </div>
        </div>

        <div class="d-flex gap-3">
            <!-- Campo de Busca -->
            <div class="input-group shadow-sm" style="width: 250px;">
                <span class="input-group-text bg-white border-0"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control border-0" placeholder="Buscar..." @bind="SearchTerm" @bind:event="oninput" />
            </div>

            <!-- BOTÃO VERDE DE CADASTRAR -->
            <button class="btn btn-success shadow-sm fw-bold px-4" @onclick="OpenCreateModal">
                <i class="bi bi-plus-lg me-2"></i> Cadastrar Novo
            </button>
        </div>
    </div>

    <!-- GRID DE CARDS -->
    <div class="row g-3">
        @foreach (var item in FilteredList)
        {
            <div class="col-md-6 col-xl-4">
                <div class="card border-0 shadow-sm h-100 card-hover">
                    <div class="card-body p-3">

                        <!-- Topo do Card -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="d-flex align-items-center gap-3">
                                <div class="avatar-circle bg-secondary text-white">
                                    @GetInitials(item.Name)
                                </div>
                                <div>
                                    <h6 class="fw-bold text-dark m-0 text-truncate" style="max-width: 180px;" title="@item.Name">
                                        @item.Name
                                    </h6>
                                    <span class="badge bg-light text-secondary border">@item.Region</span>
                                </div>
                            </div>
                            <!-- Ações -->
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light text-primary" @onclick="() => OpenEditModal(item)">
                                    <i class="bi bi-pencil-fill"></i>
                                </button>
                                <button class="btn btn-sm btn-light text-danger ms-1" @onclick="() => HandleDelete(item.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Dados Sensíveis (CPF, Email, Senha) -->
                        <div class="bg-light rounded p-2 mb-3 border border-light">
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted fw-bold" style="font-size: 0.7rem;">CPF</small>
                                <small class="text-dark font-monospace">@item.Cpf</small>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted fw-bold" style="font-size: 0.7rem;">EMAIL</small>
                                <small class="text-dark text-truncate" style="max-width: 150px;" title="@item.Email">@item.Email</small>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted fw-bold" style="font-size: 0.7rem;">SENHA</small>
                                <small class="text-danger fw-bold font-monospace">@item.TeleaulaPassword</small>
                            </div>
                        </div>

                        <!-- Rodapé (Turnos) -->
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-1">
                                <span class="badge @(item.AvailableMorning ? "bg-warning text-dark" : "bg-light text-muted border")">M</span>
                                <span class="badge @(item.AvailableAfternoon ? "bg-info text-white" : "bg-light text-muted border")">T</span>
                                <span class="badge @(item.AvailableNight ? "bg-dark text-white" : "bg-light text-muted border")">N</span>
                            </div>

                            @if (!string.IsNullOrEmpty(item.Phone))
                            {
                                <small class="text-success fw-bold"><i class="bi bi-whatsapp"></i> @item.Phone</small>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- MODAL DE CADASTRO / EDIÇÃO -->
@if (ShowModal)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1" style="z-index: 10000;">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold">
                        <i class="bi @(IsEditing ? "bi-pencil-square" : "bi-person-plus-fill") me-2"></i>
                        @(IsEditing ? "Editar Instrutor" : "Novo Instrutor")
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body p-4">
                    <EditForm Model="CurrentInstructor" OnValidSubmit="HandleSave">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <!-- Nome -->
                            <div class="col-12">
                                <label class="form-label small fw-bold text-secondary">NOME COMPLETO</label>
                                <InputText @bind-Value="CurrentInstructor.Name" class="form-control" placeholder="Nome do instrutor" />
                                <ValidationMessage For="() => CurrentInstructor.Name" class="text-danger small" />
                            </div>

                            <!-- CPF e Telefone -->
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-secondary">CPF</label>
                                <InputText @bind-Value="CurrentInstructor.Cpf" class="form-control" placeholder="000.000.000-00" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-secondary">TELEFONE</label>
                                <InputText @bind-Value="CurrentInstructor.Phone" class="form-control" placeholder="(71) 9999-9999" />
                            </div>

                            <!-- Email e Senha -->
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-secondary">EMAIL TELEAULA</label>
                                <InputText @bind-Value="CurrentInstructor.Email" class="form-control" placeholder="email@sindauto.com.br" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-secondary">SENHA TELEAULA</label>
                                <InputText @bind-Value="CurrentInstructor.TeleaulaPassword" class="form-control" placeholder="Senha de acesso" />
                            </div>

                            <!-- Região -->
                            <div class="col-md-12">
                                <label class="form-label small fw-bold text-secondary">DELEGACIA / REGIÃO</label>
                                <InputSelect @bind-Value="CurrentInstructor.Region" class="form-select">
                                    <option value="Salvador">Salvador</option>
                                    <option value="Lauro de Freitas">Lauro de Freitas</option>
                                    <option value="Camaçari">Camaçari</option>
                                    <option value="Alagoinhas">Alagoinhas</option>
                                    <option value="Feira de Santana">Feira de Santana</option>
                                    <option value="V. da Conquista">V. da Conquista</option>
                                    <option value="Itabuna">Itabuna</option>
                                    <option value="Juazeiro">Juazeiro</option>
                                    <option value="Santo Antônio de Jesus">SAJ</option>
                                </InputSelect>
                            </div>

                            <!-- Turnos -->
                            <div class="col-12 mt-3">
                                <label class="form-label small fw-bold text-secondary d-block">DISPONIBILIDADE</label>
                                <div class="d-flex gap-4">
                                    <div class="form-check form-switch">
                                        <InputCheckbox @bind-Value="CurrentInstructor.AvailableMorning" class="form-check-input" id="m" />
                                        <label class="form-check-label" for="m">Manhã</label>
                                    </div>
                                    <div class="form-check form-switch">
                                        <InputCheckbox @bind-Value="CurrentInstructor.AvailableAfternoon" class="form-check-input" id="t" />
                                        <label class="form-check-label" for="t">Tarde</label>
                                    </div>
                                    <div class="form-check form-switch">
                                        <InputCheckbox @bind-Value="CurrentInstructor.AvailableNight" class="form-check-input" id="n" />
                                        <label class="form-check-label" for="n">Noite</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Rodapé do Modal -->
                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <button type="button" class="btn btn-light border px-4" @onclick="CloseModal">Cancelar</button>
                            <button type="submit" class="btn btn-success px-5 fw-bold">
                                <i class="bi bi-check-lg me-2"></i> Salvar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .card-hover {
        transition: transform 0.2s;
    }

        .card-hover:hover {
            transform: translateY(-3px);
        }

    .form-control:focus, .form-select:focus {
        border-color: #3b82f6;
        box-shadow: none;
        background-color: #f8fafc;
    }
</style>