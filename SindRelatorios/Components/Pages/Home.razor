@page "/"
@using SindRelatorios.Models.Entities.Enums

<PageTitle>Dashboard - SindRelatórios</PageTitle>

<div class="fade-in">
    
    <!-- 1. HERO SECTION -->
    <div class="card border-0 bg-primary text-white shadow rounded-4 overflow-hidden position-relative mb-4">
        <div class="card-body p-5 position-relative" style="z-index: 2;">
            <h1 class="display-6 fw-bold">Olá, Administrador!</h1>
            <p class="lead opacity-75 mb-4" style="max-width: 600px;">
                Bem-vindo ao painel. Você tem <strong class="text-warning">@NextOpenings.Count</strong> aberturas planejadas.
            </p>
            <div class="d-flex gap-3">
                <a href="escalas/nova" class="btn btn-light text-primary fw-bold shadow-sm">
                    <i class="bi bi-calendar-plus me-2"></i>Nova Escala
                </a>
                <a href="gerador" class="btn btn-outline-light fw-bold">
                    <i class="bi bi-file-earmark-spreadsheet me-2"></i>Gerar Relatório
                </a>
            </div>
        </div>
        <i class="bi bi-activity position-absolute text-white opacity-25" 
           style="font-size: 15rem; right: -40px; bottom: -60px; transform: rotate(-15deg);"></i>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3 text-info">
                        <i class="bi bi-people-fill fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">Total Instrutores</h6>
                        <h3 class="fw-bold mb-0 text-dark">@TotalInstructors</h3>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3 text-warning">
                        <i class="bi bi-calendar-check-fill fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">Escalas Criadas</h6>
                        <h3 class="fw-bold mb-0 text-dark">@TotalScales</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3 text-success">
                        <i class="bi bi-clock-history fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">Próxima Turma</h6>
                        <h4 class="fw-bold mb-0 text-dark">
                            @(NextOpenings.FirstOrDefault()?.Date.ToString("dd/MM") ?? "--/--")
                        </h4>
                        <small class="text-muted">@(NextOpenings.FirstOrDefault()?.Region.ToString() ?? "Nenhuma")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 3. CONTEÚDO PRINCIPAL -->
    <div class="row g-4">
        
        <!-- Atalhos -->
        <div class="col-lg-4">
            <h6 class="text-secondary fw-bold mb-3 ps-2 border-start border-4 border-primary">ACESSO RÁPIDO</h6>
            <div class="d-flex flex-column gap-3">
                <a href="escalas" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-scale">
                        <div class="card-body p-3 d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 p-2 rounded me-3 text-primary">
                                <i class="bi bi-calendar-week fs-4"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold text-dark m-0">Gestão de Escalas</h6>
                                <span class="text-muted x-small">Planejamento e turmas extras</span>
                            </div>
                            <i class="bi bi-chevron-right ms-auto text-muted"></i>
                        </div>
                    </div>
                </a>

                <a href="gerador" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-scale">
                        <div class="card-body p-3 d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 p-2 rounded me-3 text-success">
                                <i class="bi bi-file-earmark-spreadsheet fs-4"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold text-dark m-0">Gerador de Relatórios</h6>
                                <span class="text-muted x-small">Exportação para Excel</span>
                            </div>
                            <i class="bi bi-chevron-right ms-auto text-muted"></i>
                        </div>
                    </div>
                </a>

                <a href="instructors" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-scale">
                        <div class="card-body p-3 d-flex align-items-center">
                            <div class="bg-dark bg-opacity-10 p-2 rounded me-3 text-dark">
                                <i class="bi bi-person-vcard fs-4"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold text-dark m-0">Base de Instrutores</h6>
                                <span class="text-muted x-small">Cadastro da equipe</span>
                            </div>
                            <i class="bi bi-chevron-right ms-auto text-muted"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Agenda -->
        <div class="col-lg-4">
            <h6 class="text-secondary fw-bold mb-3 ps-2 border-start border-4 border-warning">AGENDA</h6>
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-0">
                    @if (!NextOpenings.Any())
                    {
                        <div class="text-center p-5 text-muted">
                            <i class="bi bi-calendar-x fs-1 opacity-50"></i>
                            <p class="mt-2 small">Sem escalas futuras.</p>
                        </div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in NextOpenings.Take(4))
                            {
                                <li class="list-group-item p-3 d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="bg-light rounded p-2 text-center border" style="min-width: 50px;">
                                            <span class="d-block fw-bold text-dark h6 m-0">@item.Date.Day</span>
                                            <span class="d-block text-muted x-small">@item.Date.ToString("MMM").ToUpper()</span>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold m-0 text-dark text-truncate">@item.Region</h6>
                                            <small class="text-muted">@item.Slots.Count instrutores</small>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
                <div class="card-footer bg-white border-0 text-center">
                    <a href="escalas" class="text-decoration-none fw-bold x-small">VER TODAS</a>
                </div>
            </div>
        </div>

        <!-- Novidades (Roadmap) -->
        <div class="col-lg-4">
            <h6 class="text-secondary fw-bold mb-3 ps-2 border-start border-4 border-info">NOVIDADES DO SISTEMA</h6>
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-0">
                    @if (!LatestFeatures.Any())
                    {
                        <div class="p-4 text-center text-muted small">
                            Nenhuma novidade cadastrada.
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var feat in LatestFeatures)
                            {
                                <div class="list-group-item p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                        <span class="badge @GetBadgeClass(feat.Status) x-small">@GetStatusTranslate(feat.Status)</span>
                                        <small class="text-muted" style="font-size: 0.65rem;">@feat.CreatedAt.ToString("dd/MM")</small>
                                    </div>
                                    <h6 class="fw-bold text-dark m-0 mb-1">@feat.Title</h6>
                                    <p class="text-muted m-0 small text-truncate">@feat.Description</p>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="card-footer bg-white border-0 text-center">
                    <a href="roadmap" class="text-decoration-none fw-bold x-small text-info">
                        VER ROADMAP COMPLETO <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .hover-scale { transition: transform 0.2s ease-in-out; }
    .hover-scale:hover { transform: translateY(-3px); }
    .x-small { font-size: 0.7rem; }
    .fade-in { animation: fadeIn 0.5s ease-in; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>